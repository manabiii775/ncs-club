
<header class="main">
  <%= link_to image_tag("ncs-logo3.PNG", class:"ncs-icon") %>
  <div class='nav'>
    <ul class='lists'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname"  %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>

  <div class="top-page">
    <div class="button-container">
      <button onclick="startCamera()">カメラを起動</button>
      <%= link_to 'スタンプカード', stampcard_path(@stampcards), class: 'button-link' %>
    </div>
  </div>
</header>